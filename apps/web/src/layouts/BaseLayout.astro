---
import { AuthProvider } from '../react/AuthContext';
const { title = 'Gemelli IT' } = Astro.props;
---
<html lang="es">
  <head><meta charset="utf-8" /><meta name="viewport" content="width=device-width, initial-scale=1" /><title>{title}</title></head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <div class="max-w-6xl mx-auto p-4">
      <nav class="mb-4 flex flex-wrap gap-3 text-sm">
        <a href="/" class="underline">Dashboard</a>
        <a href="/inventory" class="underline">Inventario</a>
        <a href="/helpdesk" class="underline">HelpDesk</a>
        <a href="/tickets" class="underline">Tickets</a>
        <a href="/tickets/my" class="underline">Mis Tickets</a>
        <a href="/backups" class="underline">Backups</a>
        <a href="/login" class="underline ml-auto">Ingresar</a>
      </nav>
      <AuthProvider client:only="react"><slot /></AuthProvider>
    </div>
  </body>
</html>
