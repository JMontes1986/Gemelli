---
import MainLayout from '../../layouts/MainLayout.astro';
import DeviceAdminPanel from '../../components/DeviceAdminPanel';
---

<MainLayout title="Administrar Inventario">
  <div class="max-w-7xl mx-auto px-4 py-8 space-y-8">
    <div class="mb-4">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Administración del Inventario</h1>
      <p class="text-gray-600 max-w-2xl">
        Gestiona y actualiza la información de los equipos registrados. Solo el personal autorizado puede acceder a este panel.
      </p>
    </div>

    <DeviceAdminPanel client:load />
  </div>

  <script is:inline>
    if (typeof window !== 'undefined') {
      const token = localStorage.getItem('access_token');
      if (!token) {
        window.location.href = '/login';
      }
    }
  </script>
</MainLayout>
