{
  "name": "gemelli-it",
  "version": "1.0.0",
  "description": "Sistema de Gesti√≥n de Inventario y HelpDesk TI para Colegio Gemelli",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\" \"pnpm dev:mcp\"",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:api": "cd apps/api && python -m uvicorn app.main:app --reload --port 8000",
    "dev:mcp": "cd apps/mcp && python server.py",
    "build": "pnpm build:web && pnpm build:api",
    "build:web": "cd apps/web && pnpm build",
    "build:api": "cd apps/api && pip install -r requirements.txt",
    "db:push": "psql $SUPABASE_URL < infra/supabase.sql",
    "db:seed": "psql $SUPABASE_URL < infra/seed.sql",
    "db:reset": "pnpm db:push && pnpm db:seed",
    "test": "pnpm test:web && pnpm test:api",
    "test:web": "cd apps/web && pnpm test",
    "test:api": "cd apps/api && pytest",
    "test:e2e": "cd apps/web && pnpm test:e2e",
    "lint": "pnpm lint:web && pnpm lint:api",
    "lint:web": "cd apps/web && pnpm lint",
    "lint:api": "cd apps/api && ruff check .",
    "lint:fix": "pnpm lint:web --fix && pnpm lint:api --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "deploy": "pnpm build && netlify deploy --prod",
    "setup": "pnpm install && pnpm db:push && pnpm db:seed",
    "clean": "rm -rf node_modules apps/*/node_modules apps/web/dist apps/web/.astro"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "python": ">=3.10.0"
  },
  "keywords": [
    "inventory-management",
    "helpdesk",
    "it-support",
    "hash-chain",
    "audit-trail",
    "ai-powered",
    "education",
    "fastapi",
    "astro",
    "react",
    "supabase"
  ],
  "author": "Equipo TI Gemelli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-org/gemelli-it.git"
  },
  "bugs": {
    "url": "https://github.com/tu-org/gemelli-it/issues"
  },
  "homepage": "https://github.com/tu-org/gemelli-it#readme"
}
